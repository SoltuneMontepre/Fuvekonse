# Application Configuration
PORT=8081
GIN_MODE=release
FRONTEND_URL=http://localhost:3000

# JWT Configuration (for token validation)
JWT_SECRET=your-secret-key-change
JWT_ACCESS_TOKEN_EXPIRY_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRY_DAYS=7

# AWS IAM Configuration
AWS_REGION=ap-southeast-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# AWS Services Configuration (for local development)
S3_BUCKET=fuvekon-bucket
SES_SENDER=noreply@yourdomain.com
SQS_QUEUE=https://sqs.ap-southeast-1.amazonaws.com/your-account-id/fuvekon-queue

# Redis Configuration (Cache)
REDIS_URL=redis://localhost:6379/0

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=root
DB_PASSWORD=root
DB_NAME=fuvekon
DB_SSLMODE=disable
