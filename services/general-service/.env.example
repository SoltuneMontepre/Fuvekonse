# Application Configuration
PORT=8085

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRY_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRY_DAYS=7

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=root
DB_PASSWORD=root
DB_NAME=fuvekon
DB_SSLMODE=disable  # Use "enable" or "require" for production deployments

# AWS IAM Configuration
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# Redis Configuration (Cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# AWS Configuration (LocalStack)
# Set USE_LOCALSTACK=true when SQS_QUEUE_URL points to LocalStack (localhost)
USE_LOCALSTACK=true
LOCALSTACK_ENDPOINT=http://localhost:4566
AWS_REGION=ap-southeast-1
S3_BUCKET_URL=http://localhost:4566/fuvekonse-bucket
SQS_QUEUE_URL=http://sqs.ap-southeast-1.localhost:4566/000000000000/fuvekon-queue
# Required for internal /internal/jobs/ticket (used by SQS worker). Set same value in sqs-worker.
INTERNAL_API_KEY=your-internal-api-key-change-in-production

# Mail: choose provider with MAIL_PROVIDER=ses (default) or sendgrid
MAIL_PROVIDER=ses
# Sender identity (used for both SES and SendGrid "from" address)
SES_EMAIL_IDENTITY=your-verified-email@example.com
# Optional display name for sender (e.g. "Fuvekon Support")
MAIL_FROM_NAME=Fuvekon

# SendGrid (only when MAIL_PROVIDER=sendgrid)
# Create API key at https://app.sendgrid.com/settings/api_keys with "Mail Send" permission
SENDGRID_API_KEY=

# Login Rate Limit Configuration
LOGIN_MAX_FAIL=5
LOGIN_FAIL_BLOCK_MINUTES=15

# Environment Configuration
ENV=development

# CORS Configuration (comma-separated list of allowed origins)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
