root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Go files typically use tabs
[*.go]
indent_style = tab
trim_trailing_whitespace = true

[*.{json,yml,yaml,md,html,css,js,ts}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = true
