# Copy this file to terraform.tfvars and fill in your values
# Do not commit terraform.tfvars to version control!

aws_region   = "ap-east-1"
project_name = "fuvekonse"
environment  = "production"

# VPC Configuration
vpc_cidr             = "10.0.0.0/16"
availability_zones   = ["ap-east-1a", "ap-east-1b"]
public_subnet_cidrs  = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs = ["10.0.10.0/24", "10.0.11.0/24"]

# Database Configuration
db_name              = "fuvekonse_db"
db_username          = ""  # Set via environment variable TF_VAR_db_username
db_password          = ""  # Set via environment variable TF_VAR_db_password
db_instance_class    = "db.t3.micro"
db_allocated_storage = 20
db_engine_version    = "15.4"

# ElastiCache Configuration
redis_node_type       = "cache.t3.micro"
redis_num_cache_nodes = 2
redis_engine_version  = "7.0"

# Lambda Configuration
lambda_timeout     = 30
lambda_memory_size = 256

# S3 Configuration
bucket_name = "fuvekonse-s3-bucket"

# SQS Configuration
sqs_visibility_timeout = 30

# Domain Configuration (for SES)
domain_name = "fuvekonse.com"
